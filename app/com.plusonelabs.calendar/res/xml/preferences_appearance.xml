<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="medium"
        android:entries="@array/pref_text_size_entries"
        android:entryValues="@array/pref_text_size_values"
        android:key="textSize"
        android:summary="@string/appearance_text_size_desc"
        android:title="@string/appearance_text_size_title" />
    <ListPreference
        android:defaultValue="auto"
        android:entries="@array/pref_date_format_entries"
        android:entryValues="@array/pref_date_format_values"
        android:key="dateFormat"
        android:summary="@string/appearance_date_format_desc"
        android:title="@string/appearance_date_format_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="showHeader"
        android:summary="@string/appearance_display_header_desc"
        android:title="@string/appearance_display_header_title" >
    </CheckBoxPreference>

    <Preference
        android:defaultValue="50"
        android:key="backgroundTransparency"
        android:summary="@string/appearance_background_transparency_desc"
        android:title="@string/appearance_background_transparency_title" />

    <PreferenceCategory android:title="@string/appearance_indicators" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="indicateAlerts"
            android:summary="@string/appearance_indicate_alert_desc"
            android:title="@string/appearance_indicate_alert_title" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="indicateRecurring"
            android:summary="@string/appearance_indicate_recurring_desc"
            android:title="@string/appearance_indicate_recurring_title" >
        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/appearance_events">
        <ListPreference
            android:defaultValue=""
            android:entries="@array/pref_event_multiday_entries"
            android:entryValues="@array/pref_event_multiday_values"
            android:key="eventsMultiDay"
            android:summary="%s"
            android:title="@string/appearance_event_multiday_title">
        </ListPreference>
    </PreferenceCategory>

</PreferenceScreen>
